<h1>A Hold Will Be Placed For You</h1>

<p>
  <strong>Title:</strong> <%= @bib.title %><br>
  <strong>Author:</strong>  <%= @bib.author %>
</p>

<%= form_with url: '/holds/create', method: :post do %>
  <%= render PlaceHoldHiddenInputComponent, bib: @bib %>
  <%= render 'holds/form_inputs' %>
  <%= render PlaceHoldCheckboxWrapperComponent, holdables: @bib.holdables %>
  <button type="button" class="btn btn-info">Place Hold</button>
  <button type="button" class="btn btn-danger">Cancel</button>
<% end %>
